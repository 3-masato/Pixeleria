<div class="tag-field inline-flex items-center bg-gray-200 text-gray-800 text-sm font-medium px-2.5 py-0.5 rounded-sm">
  <span class="truncate max-w-64"><%= @value %></span>
  <%= button_tag type: :button, class: "remove-tag ml-2", data: { index: @index } do %>
    <i class="fa-solid fa-circle-xmark text-gray-500 hover:text-red-800"></i>
  <% end %>
  <%= @form.hidden_field "tags[]", name: "artwork[tags][]", value: @value %>
</div>
