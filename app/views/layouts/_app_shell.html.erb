<%
  body_class, main_class, container_class =
    admin_signed_in? ?
    [
      "bg-fuchsia-50 relative",
      "pt-20 h-auto lg:ml-64",
      "prose max-w-screen-2xl h-full mx-auto px-3"
    ] : [
      "bg-sky-50 relative",
      "",
      "prose max-w-screen-xl h-full mx-auto px-3"
    ]
%>

<%= tag.body class: body_class do %>
  <%= component "layout/header", admin_signed_in: admin_signed_in?, nav_items: nav_items %>
  <%= component "layout/sidebar", admin_signed_in: admin_signed_in?, items: sidebar_items %>
  <%= tag.main class: main_class do %>
    <%= tag.div yield, class: container_class %>
  <% end %>
  <%= component "layout/footer" %>
  <%= component "layout/alert", flash: flash %>
  <%= component "layout/modal" %>
<% end %>