<%= render Layout::HeaderComponent.new(admin_signed_in: admin_signed_in?, nav_items: nav_items) %>
<%= render Layout::SidebarComponent.new(
  admin_signed_in: admin_signed_in?,
  items: sidebar_items
) %>
<% if admin_signed_in? %>
  <main class="pt-20 h-auto lg:ml-64">
    <div class="prose max-w-screen-2xl mx-auto px-3">
      <%= yield %>
    </div>
  </main>
<% else %>
  <main>
    <div class="prose max-w-screen-xl mx-auto px-3">
      <%= yield %>
    </div>
  </main>
<% end %>
<%= render Layout::FooterComponent.new %>
<%= render "layouts/alert" %>
<%= render Layout::ModalComponent.new %>
