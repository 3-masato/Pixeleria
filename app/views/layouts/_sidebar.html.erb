<aside class="fixed top-0 left-0 z-40 w-64 h-screen pt-20 transition-transform -translate-x-full bg-white border-r border-gray-200 lg:translate-x-0">
  <div class="overflow-y-auto py-6 px-3 h-full bg-white">
    <ul class="space-y-2">
      <li>
        <%= link_to admin_users_path, class: "flex items-center p-2 text-sm font-medium text-gray-900 rounded-sm hover:bg-gray-100 group" do %>
          <span class="w-6 h-6 text-gray-500 transition duration-75 group-hover:text-gray-900"><i class="fa-solid fa-users"></i></span>
          <span class="ml-3"><%= t("model.user") %></span>
        <% end %>
      </li>
      <li>
        <%= link_to admin_artworks_path, class: "flex items-center p-2 text-sm font-medium text-gray-900 rounded-sm hover:bg-gray-100 group" do %>
          <span class="w-6 h-6 text-gray-500 transition duration-75 group-hover:text-gray-900"><i class="fa-solid fa-palette"></i></span>
          <span class="ml-3"><%= t("model.artwork") %></span>
        <% end %>
      </li>
    </ul>
  </div>
</aside>
