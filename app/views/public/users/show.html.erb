<%= component "shared/card", class: "my-10 p-6" do %>
  <%= render "public/users/profile", user: @user, user_artworks: @user_artworks %>
  <section class="py-6 px-2">
    <%= render "public/artworks/list", artworks: @user_artworks.limit(artworks_display_limit) %>
    <% if @user_artworks.size > artworks_display_limit %>
      <div class="text-right mt-4 mr-2">
        <%= link_to user_artworks_path(@user.account_name), class: "text-blue-500 hover:underline inline-flex items-center" do %>
          <%= t("user.more_artworks") %><span class="ml-1 text-xs"><i class="fa-solid fa-chevron-right" aria-hidden="true"></i></span>
        <% end %>
      </div>
    <% end %>
  </section>
<% end %>
