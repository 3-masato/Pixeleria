<section class="border-b border-gray-300">
  <div class="grid grid-cols-1 items-center md:grid-cols-3">
    <div class="grid grid-cols-3 text-center">
      <div class="mx-2">
        <%= tag.div class: "font-bold text-gray-700 text-xl" do %>
          <%= tag.span @user.followers.size, id: "followers-count-of-#{@user.account_name}" %>
        <% end %>
        <%= tag.div t("user.followers"), class: "text-gray-400" %>
      </div>
      <div class="mx-2">
        <%= tag.div class: "font-bold text-gray-700 text-xl" do %>
          <%= tag.span @user.followings.size, id: "followings-count-of-#{@user.account_name}" %>
        <% end %>
        <%= tag.div t("user.followed"), class: "text-gray-400" %>
      </div class="mx-2">
      <div>
        <%= tag.div @user.artworks.size, class: "font-bold text-gray-700 text-xl" %>
        <%= tag.div t("user.artworks"), class: "text-gray-400" %>
      </div>
    </div>
    <div class="flex justify-center items-center p-4">
      <%= image_tag @user.get_profile_image, size: "128x128", class: "rounded-full shadow-xl" %>
    </div>
    <div class="flex justify-center items-center">
      <!-- TODO: ボタンコンポーネントを作る -->
      <% if @user == current_user %>
        <%= link_to t("user.edit"), edit_user_profile_path(@user.account_name) %>
      <% else %>
        <%= tag.div id: "follow-of-#{@user.account_name}" do %>
          <%= render "public/relationships/btn", user: @user %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="mt-16 text-center pb-12">
    <div class="flex justify-center items-center">
      <%= tag.span @user.display_name, class: "text-2xl font-bold text-gray-700 mr-1" %>
      <%= tag.span "@" + @user.account_name, class: "text-lg font-normal text-gray-400" %>
    </div>
    <%= tag.p @user.introduction %>
  </div>
</section>
<section>
  <%= render "public/artworks/list", artworks: @user_artworks %>
</section>