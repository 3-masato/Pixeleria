  const commentInput = document.getElementById("comment-input-of-<%= @artwork.id %>");
  if (commentInput) {
    commentInput.value = "";
    // `value` に直接値を代入した場合はinputイベントが発火しないため、明示的にイベントを発火させます。
    commentInput.dispatchEvent(new Event("input"));
