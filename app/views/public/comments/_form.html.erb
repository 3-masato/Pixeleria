<div class="w-full">
  <% if user_signed_in? %>
    <%= form_with model: [artwork, comment], local: false do |f| %>
      <div class="flex items-center space-x-2">
        <%= tag.div class: "grow", id: "comment-input-of-#{artwork.id}" do %>
          <%= component(
            "shared/text_field",
            form: f,
            field_type: :text_field,
            field_name: :content
          ) %>
        <% end %>
        <%= component(
          "shared/button",
          style: :solid,
          color: :sky,
          type: "submit",
          class: "w-20 h-10"
        ) do %>
          <%= t("comment.send") %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="text-sm text-gray-500">
      <%= t("messages.comment.required_sign_in") %>
    </div>
  <% end %>
</div>
