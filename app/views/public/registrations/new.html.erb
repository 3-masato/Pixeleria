<%= render Layout::AuthFormComponent.new(
  heading: t("devise.shared.sign_up")
) do %>
  <%= form_with(
    model: resource,
    url: registration_path(resource_name),
    local: true
  ) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="grid gap-y-4">

      <div class="field">
        <%= f.label :display_name, class: "block text-sm font-bold mb-2" %>
        <%= render Shared::TextFieldComponent.new(
          form: f,
          field_type: :text_field,
          field_name: :display_name,
          autofocus: true
        ) %>
      </div>

      <div class="field">
        <%= f.label :account_name, class: "block text-sm font-bold mb-2" %>
        <%= render Shared::TextFieldComponent.new(
          form: f,
          field_type: :text_field,
          field_name: :account_name
        ) %>
      </div>

      <div class="field">
        <%= f.label :email, class: "block text-sm font-bold mb-2" %>
        <%= render Shared::TextFieldComponent.new(
          form: f,
          field_type: :email_field,
          field_name: :email,
          autocomplete: "email"
        ) %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block text-sm font-bold mb-2" %>
        <%= render Shared::TextFieldComponent.new(
          form: f,
          field_type: :password_field,
          field_name: :password,
          autocomplete: "new-password"
        ) %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "block text-sm font-bold mb-2" %>
        <%= render Shared::TextFieldComponent.new(
          form: f,
          field_type: :password_field,
          field_name: :password_confirmation,
          autocomplete: "new-password"
        ) %>
      </div>
    </div>

    <div class="mt-4 flex justify-center items-center">
      <%= render Shared::ButtonComponent.new(
        style: :solid,
        color: :sky,
        type: "submit",
        class: "w-36 h-10"
      ) do %>
        <%= t("devise.shared.sign_up") %>
      <% end %>
    </div>
  <% end %>

  <div class="py-3 flex items-center text-xs text-gray-400 uppercase before:flex-[1_1_0%] before:border-t before:border-gray-200 before:me-6 after:flex-[1_1_0%] after:border-t after:border-gray-200 after:ms-6">or</div>

  <p class="text-gray-600 text-sm">
    <%= link_to t("messages.user.auth.session_guide"), new_session_path(resource_name), class: "text-blue-600 font-bold hover:underline" %>
  </p>
<% end %>
