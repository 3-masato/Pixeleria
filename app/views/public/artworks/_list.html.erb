<div class="w-full grid justify-items-center grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6">
  <% artworks.each do |artwork| %>
    <div class="w-48 flex justify-center items-center flex-col gap-2">
      <div>
        <%= link_to artwork_path(artwork), class: "hover:underline" do %>
          <%= image_tag artwork.image, size: "128x128", style: "image-rendering: pixelated" %>
        <% end %>
        <%= tag.div id: "like-#{artwork.id}" do %>
          <%= render Interaction::LikeButtonComponent.new(
            artwork: artwork,
            current_user: current_user
          ) %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
