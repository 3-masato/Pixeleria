$("#editor-container").html(`
<pixeleria-editor
  id="pixeleria-editor"
  artwidth="<%= @width %>"
  artheight="<%= @height %>"
  dotsize="<%= @dotsize %>"
></pixeleria-editor>`);
$("#pixeleria-editor").on("save", function(e) {
  const detail = e.detail;
  const url = "/artworks";

  $.ajax({
    url: url,
    type: "POST",
    contentType: "application/json",
    data: JSON.stringify({ artwork: detail.join(","), width: <%= @width %>, height: <%= @height %> })
  });
});
