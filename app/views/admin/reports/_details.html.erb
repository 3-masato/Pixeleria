<div class="overflow-auto p-6">
  <%
    reported_user = report.reported_by_user
  %>
  <%= component "shared/table/base" do %>
    <%= component "shared/table/body" do %>
      <%= component(
        "shared/details_row",
        heading: t("models.report.reported_by_user_id")
      ) do %>
        <%= link_to reported_user.display_name, admin_user_path(reported_user.account_name), class: "font-bold text-blue-500 hover:underline" %>
      <% end %>

      <%= component(
        "shared/details_row",
        heading: t("models.report.reportable_type")
      ) do %>
        <%= t("report.target.#{report.reportable_type.downcase}") %>
      <% end %>

      <%= component(
        "shared/details_row",
        heading: t("models.report.reason")
      ) do %>
        <%= report.reason_i18n %>
      <% end %>

      <%= component(
        "shared/details_row",
        heading: t("models.report.description")
      ) do %>
        <div class="whitespace-normal max-w-[32rem]">
          <%= report.description %>
        </div>
      <% end %>

      <%= component(
        "shared/details_row",
        heading: t("models.report.status")
      ) do %>
        <div id="status-label">
          <%= component "report/status_label", report: report, type: :selecting %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>