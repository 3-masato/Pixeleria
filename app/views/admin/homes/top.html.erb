<div class="my-10 mx-16 grid justify-items-center grid-cols-1 gap-y-16">
  <% if @unread_reports.size > 0 %>
    <%= component "shared/card", class: "w-full" do %>
      <div class="px-8 py-5 flex justify-center items-center font-bold bg-sky-200">
        <%= component "utils/icon_text", fa_class: "fa-solid fa-flag" do %>
          <%= t("messages.report.unread_notice", count: @unread_reports.size) %>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <%= component "shared/card", class: "w-96" do %>
    <%= link_to admin_users_path, class: "p-12 w-full h-full block space-y-5 text-center no-underline transition-colors text-emerald-950 bg-emerald-100 hover:bg-emerald-200" do %>
      <div class="text-5xl"><i class="fa-solid fa-users"></i></div>
      <div class="text-2xl font-bold tracking-wide"><%= t("user.list") %></div>
    <% end %>
  <% end %>
  <%= component "shared/card", class: "w-96" do %>
    <%= link_to admin_artworks_path, class: "p-12 w-full h-full block space-y-5 text-center no-underline transition-colors text-indigo-950 bg-indigo-100 hover:bg-indigo-200" do %>
      <div class="text-5xl"><i class="fa-solid fa-palette"></i></div>
      <div class="text-2xl font-bold tracking-wide"><%= t("artwork.list") %></div>
    <% end %>
  <% end %>
  <%= component "shared/card", class: "w-96" do %>
    <%= link_to admin_comments_path, class: "p-12 w-full h-full block space-y-5 text-center no-underline transition-colors text-amber-950 bg-amber-100 hover:bg-amber-200" do %>
      <div class="text-5xl"><i class="fa-solid fa-comments"></i></div>
      <div class="text-2xl font-bold tracking-wide"><%= t("comment.list") %></div>
    <% end %>
  <% end %>
</div>
