<%= render Layout::AuthFormComponent.new(
  heading: t("devise.shared.sign_in")
) do %>
  <%= form_with(
    model: resource,
    url: session_path(resource_name),
    local: true
  ) do |f| %>
    <div class="grid gap-y-4">
      <div class="field">
        <%= f.label :email, class: "block text-sm font-bold mb-2" %>
        <%= render Shared::TextFieldComponent.new(
          form: f,
          field_type: :email_field,
          field_name: :email,
          autofocus: true,
          autocomplete: "email"
        ) %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block text-sm font-bold mb-2" %>
        <%= render Shared::TextFieldComponent.new(
          form: f,
          field_type: :password_field,
          field_name: :password,
          autocomplete: "current-password"
        ) %>
        <% if devise_mapping.rememberable? %>
          <div class="mt-2 text-sm">
            <%= render Shared::CheckboxComponent.new(
              form: f,
              field_name: :remember_me,
              label_text: t("activerecord.attributes.admin.remember_me"),
            ) %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-4 flex justify-center items-center">
      <%= render Shared::ButtonComponent.new(
        style: :solid,
        color: :emerald,
        type: "submit",
        class: "w-36 h-10"
      ) do %>
        <%= t("devise.shared.sign_in") %>
      <% end %>
    </div>
  <% end %>
<% end %>