<%= component "layout/auth/form", heading: t("devise.shared.admin_sign_in") do %>
  <%= form_with(
    model: resource,
    url: session_path(resource_name),
    local: true
  ) do |f| %>
    <div class="grid gap-y-4">
      <div>
        <%= component "shared/form/label", form: f, field: :email %>
        <%= component(
          "shared/form/text_field",
          form: f,
          field_type: :email_field,
          field_name: :email,
          autofocus: true,
          autocomplete: "email",
          placeholder: t("placeholder.email"),
          model: resource
        ) %>
      </div>

      <div>
        <%= component "shared/form/label", form: f, field: :password %>
        <%= component(
          "shared/form/text_field",
          form: f,
          field_type: :password_field,
          field_name: :password,
          autocomplete: "current-password",
          model: resource
        ) %>
        <% if devise_mapping.rememberable? %>
          <div class="mt-2 text-sm">
            <%= component(
              "shared/form/checkbox",
              form: f,
              field_name: :remember_me,
              label_text: t("activerecord.attributes.admin.remember_me"),
            ) %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-4 flex justify-center items-center">
      <%= component(
        "shared/button",
        style: :outline,
        color: :fuchsia,
        type: "submit",
        class: "w-36 h-10"
      ) do %>
        <%= t("devise.shared.sign_in") %>
      <% end %>
    </div>
  <% end %>
<% end %>
