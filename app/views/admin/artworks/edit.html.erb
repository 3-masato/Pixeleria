<%= component "shared/card", class: "my-10 p-6" do %>
  <%= tag.h2 t("artwork.edit_heading"), class: "text-2xl font-bold" %>
  <div class="mt-6 flex justify-center flex-col lg:justify-evenly lg:flex-row">
    <div class="flex justify-center items-center">
      <%= image_tag @artwork.image, size: "256x256", style: "image-rendering: pixelated" %>
    </div>
    <div class="self-center w-96">
      <%= form_with model: [:admin, @artwork], local: true do |f| %>
        <div class="grid gap-y-4">
          <div>
            <%= f.label :title, t("models.artwork.title"), class: "block text-sm font-bold mb-2" %>
            <%= component(
              "shared/text_field",
              form: f,
              field_type: :text_field,
              field_name: :title
            ) %>
          </div>

          <div>
            <%= f.label :description, t("models.artwork.description"), class: "block text-sm font-bold mb-2" %>
            <%= component(
              "shared/text_area",
              form: f,
              field_name: :description,
              rows: 3,
              placeholder: "",
            ) %>
          </div>

          <%= component "artwork/tags_input", form: f, tags: @tag_array, label: t("models.artwork.tags") %>

          <div>
            <%= component(
              "shared/checkbox",
              form: f,
              field_name: :is_public,
              label_text: t("models.artwork.is_public"),
              checked: true
            ) %>
          </div>

          <div class="mt-4 flex justify-center items-center">
            <%= component(
              "shared/button",
              style: :outline,
              color: :sky,
              type: :submit,
              class: "w-36 h-10"
            ) do %>
              <%= t("artwork.save") %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mt-4 pt-4 border-t border-gray-300 space-y-1">
    <div>
      <%= link_to admin_artwork_path(@artwork), class: "inline-flex items-center text-sm font-bold text-gray-600 transition-all hover:text-blue-500" do %>
        <i class="fa-solid fa-chevron-left text-xs"></i><span class="ml-1"><%= t("artwork.details") %></span>
      <% end %>
    </div>
    <div>
      <%= link_to admin_artworks_path, class: "inline-flex items-center text-sm font-bold text-gray-600 transition-all hover:text-blue-500" do %>
        <i class="fa-solid fa-chevron-left text-xs"></i><span class="ml-1"><%= t("artwork.list") %></span>
      <% end %>
    </div>
  </div>
<% end %>
