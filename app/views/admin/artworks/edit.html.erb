<%= component "shared/card", class: "my-10 p-6" do %>
  <%= tag.h2 t("artwork.edit_heading"), class: "text-2xl font-bold" %>
  <div class="mt-6 mx-auto w-96">
    <%= form_with model: [:admin, @artwork] do |f| %>
      <div class="grid gap-y-4">
        <div>
          <%= f.label :title, t("models.artwork.title"), class: "block text-sm font-bold mb-2" %>
          <%= component(
            "shared/text_field",
            form: f,
            field_type: :text_field,
            field_name: :title
          ) %>
        </div>

        <div>
          <%= f.label :description, t("models.artwork.description"), class: "block text-sm font-bold mb-2" %>
          <%= component(
            "shared/text_area",
            form: f,
            field_name: :description,
            rows: 3,
            placeholder: "",
          ) %>
        </div>

        <%= component "artwork/tags_input", form: f, tags: @tag_array, label: t("models.artwork.tags") %>

        <div>
          <%= component(
            "shared/checkbox",
            form: f,
            field_name: :is_public,
            label_text: t("models.artwork.is_public"),
            checked: true
          ) %>
        </div>

        <div class="mt-4 flex justify-center items-center">
          <%= component(
            "shared/button",
            style: :outline,
            color: :sky,
            type: :submit,
            class: "w-36 h-10"
          ) do %>
            <%= t("artwork.save") %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
