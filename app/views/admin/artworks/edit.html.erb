<%= component "shared/card", class: "my-10 p-6" do %>
  <%= tag.h2 t("artwork.edit_heading") %>
  <div class="mt-6 flex justify-center flex-col gap-y-8 lg:justify-evenly lg:flex-row lg:gap-0">
    <div class="flex justify-center items-center">
      <%= component "artwork/image", artwork: @artwork, size: :xxl %>
    </div>
    <div class="self-center w-96">
      <%= form_with model: [:admin, @artwork], local: true do |f| %>
        <div class="grid gap-y-4">
          <div>
            <%= f.label :title, t("activerecord.attributes.artwork.title"), class: "block text-sm font-bold mb-2" %>
            <%= component(
              "shared/form/text_field",
              form: f,
              field_type: :text_field,
              field_name: :title
            ) %>
          </div>

          <div>
            <%= f.label :description, t("activerecord.attributes.artwork.description"), class: "block text-sm font-bold mb-2" %>
            <%= component(
              "shared/form/text_area",
              form: f,
              field_name: :description,
              rows: 3,
              placeholder: "",
            ) %>
          </div>

          <%= component "artwork/tags_input", form: f, tags: @tag_array, label: t("activerecord.attributes.artwork.tags") %>

          <div>
            <%= component(
              "shared/form/checkbox",
              form: f,
              field_name: :is_public,
              label_text: t("activerecord.attributes.artwork.is_public"),
              checked: true
            ) %>
          </div>

          <div class="mt-4 flex justify-center items-center">
            <%= component(
              "shared/button",
              style: :outline,
              color: :sky,
              type: :submit,
              class: "w-36 h-10"
            ) do %>
              <%= t("artwork.update") %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mt-4 pt-4 border-t border-gray-300 space-y-1">
    <div>
      <%= link_to admin_artwork_path(@artwork), class: "inline-flex items-center text-sm font-bold text-gray-600 transition-all no-underline hover:text-blue-500 hover:underline" do %>
        <%= component "utils/icon_text", fa_class: "fa-solid fa-chevron-left text-xs" do %>
          <%= t("artwork.details") %>
        <% end %>
      <% end %>
    </div>
    <div>
      <%= link_to admin_artworks_path, class: "inline-flex items-center text-sm font-bold text-gray-600 transition-all no-underline hover:text-blue-500 hover:underline" do %>
        <%= component "utils/icon_text", fa_class: "fa-solid fa-chevron-left text-xs" do %>
          <%= t("artwork.list") %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
