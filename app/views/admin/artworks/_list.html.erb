<%= render Shared::TableSectionComponent.new(title: t("artwork.list")) do %>
  <%= render Shared::TableComponent.new do %>
    <%= render Shared::TableHeaderComponent.new(headers: [
      "#",
      show_author ? t("models.artwork.author") : nil,
      t("models.artwork.image"),
      t("models.artwork.title"),
      t("models.artwork.description"),
      t("models.artwork.tag")
    ].compact) %>
    <%= render Shared::TableBodyComponent.new do %>
      <% artworks.each do |artwork| %>
        <%= render Shared::TableRowComponent.new do %>
          <%= render Shared::TableCellComponent.new(is_header: true) do %>
            <%= artwork.id %>
          <% end %>
          <% if show_author %>
            <%= render Shared::TableCellComponent.new do %>
              <%= link_to artwork.user.display_name, admin_user_path(artwork.user.account_name), class: "font-bold text-blue-500 hover:underline" %>
            <% end %>
          <% end %>
          <%= render Shared::TableCellComponent.new do %>
            <%= image_tag artwork.image, size: "32x32", style: "image-rendering: pixelated;" %>
          <% end %>
          <%= render Shared::TableCellComponent.new do %>
            <%= artwork.title %>
          <% end %>
          <%= render Shared::TableCellComponent.new do %>
            <%= artwork.description %>
          <% end %>
          <%= render Shared::TableCellComponent.new do %>
            <%= artwork.tags %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
