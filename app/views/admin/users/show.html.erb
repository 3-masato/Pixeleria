<%= component "shared/card", class: "my-10 p-6" do %>
  <%= tag.h2 t("user.details") %>
  <div class="overflow-auto">
    <%= render "admin/users/details", user: @user %>
  </div>
  <div class="mt-4 pt-4 border-t border-gray-300 space-y-1">
    <div>
      <%= component "shared/back_link", path: admin_users_path, text: t("user.list") %>
    </div>
  </div>
<% end %>

<%= component "shared/card", class: "my-10" do %>
  <h2 class="ml-6"><%= t("artwork.list") %></h2>
  <%= render "admin/artworks/table", artworks: @user_artworks, show_author: false %>
<% end %>
