<%= component "shared/card", class: "my-10 p-6" do %>
  <%= tag.h2 t("user.edit_heading"), class: "text-2xl font-bold" %>
  <div class="mt-6 mx-auto w-96">
    <%= form_with model: @user, url: admin_update_user_path(@user.account_name), local: true do |f| %>
      <fieldset class="my-2">
        <%= component "shared/label", form: f, field: :profile_image %>
        <%= component "shared/file_input", form: f, field_name: :profile_image, accept: "image/*" %>
      </fieldset>

      <fieldset class="my-2">
        <%= component "shared/label", form: f, field: :display_name %>
        <%= component(
          "shared/text_field",
          form: f,
          field_type: :text_field,
          field_name: :display_name,
          size: :small
        ) %>
      </fieldset>

      <fieldset class="my-2">
        <%= component "shared/label", form: f, field: :account_name %>
        <%= component(
          "shared/text_field",
          form: f,
          field_type: :text_field,
          field_name: :account_name,
          size: :small
        ) %>
       </fieldset>

      <fieldset class="my-2">
        <%= component "shared/label", form: f, field: :introduction %>
        <%= component(
          "shared/text_area",
          form: f,
          field_name: :introduction,
          rows: 3,
          placeholder: "",
        ) %>
      </fieldset>

      <fieldset class="my-2">
        <%= component "shared/label", form: f, field: :status %>
        <div class="flex items-center gap-4">
          <% User.statuses.keys.each do |status_key| %>
            <%= component(
              "shared/radio",
              form: f,
              field_name: :status,
              value: status_key,
              label_field: "status_#{status_key}",
              label_text: t("enums.user.status.#{status_key}"),
              checked: @user.status == status_key
            ) %>
          <% end %>
        </div>
      </fieldset>

      <div class="mt-4 flex justify-center items-center">
        <%= component(
          "shared/button",
          style: :outline,
          color: :sky,
          type: :submit,
          class: "w-36 h-10"
        ) do %>
          <%= t("user.update") %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
