<%= component "shared/card", class: "my-10" do %>
  <div class="px-6 py-4 font-bold text-lg bg-gray-200">
    ユーザー検索
  </div>
  <div class="mx-auto mt-6 mb-2 w-96">
    <%= form_with url: admin_users_path, method: :get, local: true do |f| %>
      <div class="grid gap-y-3">
        <div>
          <%= component "shared/form/label", form: f, field: :status, text: t("user.searches.status") %>
          <%= component(
            "shared/form/select",
            form: f,
            field_name: :status,
            choices: User.statuses.map { |key, _value| [t("enums.user.status.#{key}"), key] },
            selected: params[:status],
            include_blank: t("shared.all"),
            size: :small,
          ) %>
        </div>
        <div>
          <%= component "shared/form/label", form: f, field: :query, text: t("user.searches.query") %>
          <%= component(
            "shared/form/text_field",
            form: f,
            field_type: :text_field,
            field_name: :query,
            size: :small,
            value: @query,
            placeholder: t("user.searches.query_placeholder")
          ) %>
        </div>
        <div class="flex justify-center items-center">
          <%= component(
            "shared/button",
            style: :solid,
            color: :sky,
            type: :submit,
            class: "px-4 py-1 text-sm"
          ) do %>
            <%= t("user.searches.search") %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<%= render "admin/users/list", users: @users %>
